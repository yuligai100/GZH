<UserControl x:Class="WPFtest.UC_Person"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFtest"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Background="Yellow"   Content="人" HorizontalAlignment="Left" Margin="109,53,0,0"  VerticalAlignment="Top" Height="31" Width="127"/>
        <TextBox Background="Yellow" Text="{Binding  Path=Person.name, RelativeSource={RelativeSource FindAncestor ,AncestorType={x:Type UserControl}}}" HorizontalAlignment="Left" Margin="83,239,0,0" VerticalAlignment="Top" Height="31" Width="127"/>
        <TextBox   Background="Yellow"  Text="{Binding  Path=Person.phone, RelativeSource={RelativeSource FindAncestor ,AncestorType={x:Type UserControl}}}" HorizontalAlignment="Left" Margin="41,167,0,0" VerticalAlignment="Top" Height="31" Width="127"/>
        <TextBox  Background="Yellow"   Text="{Binding  Path=Person.Sex, RelativeSource={RelativeSource FindAncestor ,AncestorType={x:Type UserControl}}}" HorizontalAlignment="Left" Margin="83,108,0,0" VerticalAlignment="Top" Height="31" Width="127"/>

    </Grid>
</UserControl>
